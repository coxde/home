---
import Main from '../layouts/Main.astro';
---

<Main title="Luke - Portfolio, blog and sweet home">
    <section class="section-hero">
        <div class="mx-8 flex flex-col items-center justify-items-center pt-24">
            <h1 class="m-8 tracking-tight text-nord6 drop-shadow-md">
                <span>Portfolio,<br />Blog<br />...and&nbsp;</span>
                <span class="text-nord-13 underline">sweet</span>
                <span> home.</span>
            </h1>

            <div class="m-8 flex flex-col items-center justify-items-center">
                <div class="m-4 flex gap-6">
                    <h2 class="tracking-wide text-nord6">
                        Hi there, Iâ€™m Luke!
                    </h2>
                    <div class="chat chat-start relative -top-4">
                        <div
