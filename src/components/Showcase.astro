<script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    gsap.registerPlugin(ScrollTrigger);

    gsap.to('header', {
        scrollTrigger: {
            trigger: '.mockup-browser',
            start: 'top bottom',
            end: '+=300',
            scrub: true,
        },
        // y: -100, // Poor performance
        autoAlpha: 0,
    });
</script>
